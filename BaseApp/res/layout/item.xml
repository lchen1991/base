<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.base.app.DebugActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:background="@drawable/bg1" >

        <TextView
            android:id="@+id/vip_menu_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/vip_title_shap"
            android:gravity="center"
            android:padding="4dip"
            android:text="包月"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/vip_xianjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/vip_menu_title"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="10dip"
            android:text="现价:81元"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/vip_yuanjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/vip_xianjia"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="6dip"
            android:background="@drawable/vip_jiage_line_shap"
            android:text="原价:100元"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/vip_zhekou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vip_menu_title"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"
            android:layout_toRightOf="@+id/vip_xianjia"
            android:text="9.0折"
            android:textSize="32dip" />

        <TextView
            android:id="@+id/vip_tangguo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dip"
            android:layout_below="@id/vip_menu_title"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:layout_toRightOf="@id/vip_zhekou"
            android:drawableLeft="@drawable/t"
            android:drawablePadding="4dip"
            android:gravity="center"
            android:text="糖果988个"
            android:textSize="16dip" />
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_below="@id/vip_menu_title"
            android:layout_toRightOf="@id/vip_tangguo"
             android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:padding="6dip"
            android:src="@drawable/asd"/>
    </RelativeLayout>

</RelativeLayout>